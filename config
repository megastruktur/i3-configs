# Lock and etc
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
     bindsym l exec --no-startup-id i3exit lock, mode "default"
     bindsym e exec --no-startup-id i3exit logout, mode "default"
     bindsym s exec --no-startup-id i3exit suspend, mode "default"
     bindsym h exec --no-startup-id i3exit hibernate, mode "default"
     bindsym r exec --no-startup-id i3exit reboot, mode "default"
     bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+l mode "$mode_system"

#VPN switch
set $mode_vpn VPN (s) sensely, (e) end
mode "$mode_vpn" {
	bindsym s exec --no-startup-id nmcli con up SenselyNEW, mode "default"
	bindsym e exec --no-startup-id nmcli con down SenselyNEW, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+v mode "$mode_vpn"

# Monitor Config switch
set $mode_monitor Monitor config (h) home, (w) work 3 monitor, (s) sensely, (d) default
mode "$mode_monitor" {
        bindsym h exec --no-startup-id xrandr --output eDP-1 --off --output HDMI-1 --mode 3440x1440 --rate 60, mode "default"
        bindsym w exec --no-startup-id xrandr --output eDP-1 --off --output HDMI-1 --auto --output DP2 --auto --right-of HDMI1, mode "default"
        bindsym d exec --no-startup-id xrandr --output eDP-1 --auto --output HDMI-1 --off --output DP2 --off, mode "default"
    	bindsym s exec --no-startup-id xrandr --output eDP-1 --off --output HDMI-1 --auto, mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$mode_monitor"

# Mobile Mount
set $mode_mount Mount mobile (m) mount, (u) unmount
mode "$mode_mount" {
        bindsym m exec --no-startup-id jmtpfs /home/megastruktur/mtp-mount
        bindsym u exec --no-startup-id fusermount -u /home/megastruktur/mtp-mount
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_mount"

# Bluetooth Connect
set $bluetooth_connect Connect Bluetooth (b) Bose
mode "$bluetooth_connect" {
        bindsym b exec --no-startup-id bluetoothctl connect 4C:87:5D:2C:BE:69, mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+b mode "$bluetooth_connect"

# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color2 #f0f0f0

# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg
client.background       $bg

